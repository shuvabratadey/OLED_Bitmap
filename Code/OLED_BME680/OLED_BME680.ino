#define TIME_DELAY_MS 250

void Show_Temp_Humidity()
{
  display.setCursor(42, 10);
  display.print(bme.temperature);

  if (bme.readHumidity() < 100)
  {
    display.setCursor(53, 40);
  }
  else
  {
    display.setCursor(42, 40);
  }
  display.print((int)bme.humidity);
}

void setup() {
  Serial.begin(115200);
  if (!display.begin(SSD1306_SWITCHCAPVCC, 0x3C))
  {
    Serial.println(F("SSD1306 allocation failed"));
    for (;;)
      ;
  }
  if (!bme.begin())
  {
    Serial.println(F("BME680 failed"));
    display.clearDisplay();
    display.setCursor(10, 20);
    display.print("ERROR BME");
    display.display();
    for (;;)
      ;
  }
  // Set up oversampling and filter initialization
  bme.setTemperatureOversampling(BME680_OS_8X);
  bme.setHumidityOversampling(BME680_OS_2X);
  bme.setPressureOversampling(BME680_OS_4X);
  bme.setIIRFilterSize(BME680_FILTER_SIZE_3);
  bme.setGasHeater(320, 150); // 320*C for 150 ms

  display.setTextColor(1);
  display.setTextSize(2);
  display.setTextWrap(false);

  display.clearDisplay();
  display.display();
}

