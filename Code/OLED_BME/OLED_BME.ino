void Show_Temp_Humidity_BME280()
{
  display.setCursor(42, 10);
  display.print(bme280.readTemperature());

  if (bme280.readHumidity() < 100)
  {
    display.setCursor(53, 40);
  }
  else
  {
    display.setCursor(42, 40);
  }
  display.print((int)bme280.readHumidity());
}

void Show_Temp_Humidity_BME680()
{
  display.setCursor(42, 10);
  display.print(bme680.temperature);

  if (bme680.readHumidity() < 100)
  {
    display.setCursor(53, 40);
  }
  else
  {
    display.setCursor(42, 40);
  }
  display.print((int)bme680.humidity);
}

